<?php

//名前をキー０を指定して配列に格納

    $profile[0] = "神田ゴロウ";
  
//身長をキー１を指定して配列に格納

    $profile[1] = 169.5;
    
//年齢をキー指定なしで配列に格納

    $profile[] = 19;
    
//血液型をキー指定なしで配列に格納

    $profile[] = 'A';
    
    
    echo " $profile[0] さんの体重は、$profile[1] センチです。<br>";
    echo "年齢は $profile[2] 歳、血液型は $profile[3]　型です";
    ?>

    