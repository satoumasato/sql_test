<?php
$score = $_POST["score"];

if($score<0||$score>100){
    $msg = "０〜100までの間で点数を入力してください！";   
}
else{
    if($score>=80){
        if($score==100){
           $msg = "あなたは満点で合格しました。<br>\n";
        }
        else{
            $msg="あなたは合格しました。<br>\n";
        }
    $msg="おめでとうございます。"
}
else{
    $msg="８０点未満は不合格です<br>次の機会に向けてがんばりましょう\n";
}
}